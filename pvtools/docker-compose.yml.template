version: '3'

services:
  backend:
    build:
      dockerfile: Dockerfile.backend
  frontend:
    build:
      dockerfile: Dockerfile.frontend
      args:
        - APP_URL=http://localhost:8888
        - NODE_ENV=production
        - GOOGLE_ANALYTICS_ID=UA-xxxxxx
  proxy:
    image: nginx:alpine
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf
    ports:
      - 8888:8081
    restart: unless-stopped

